{
  "name": "src",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "build:js:dev": {
      "patterns": [
        "./src/js"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "server": "concurrently -k \"npm run deploy && cd dist && live-server\" \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:html\"",
    "start": "node index.js",
    "build": "webpack",
    "watch": "nodemon",
    "clean": "rm -rf ./dist && mkdir dist",
    "copy:html": "cp index.html dist/index.html",
    "watch:html": "npm-watch copy:html",
    "build:css": "node-sass --omit-source-map-url src/sass/style.scss  dist/css/style.css",
    "watch:css": "npm run build:css -- --watch",
    "build:js": "babel ./src/js --out-file dist/main.min.js --presets=babel-preset-minify",
    "build:js:dev": "npm run build:js -- --source-maps",
    "watch:js": "npm-watch build:js:dev",
    "deploy": "npm run clean && npm run copy:html && npm run build:css && npm run copy:assets && npm run build:js && npm run build",
    "copy:assets": "cp -R src/assets dist/assets",
    "heroku-postbuild": "yarn deploy"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-minify": "^0.5.1",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^4.3.1",
    "concurrently": "^5.0.0",
    "css-loader": "^3.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "file-loader": "^4.2.0",
    "jquery": "^3.4.1",
    "node-static": "^0.7.11",
    "npm-watch": "^0.6.0",
    "path": "^0.12.7",
    "popper.js": "^1.16.0",
    "socket.io": "^2.3.0",
    "style-loader": "^1.0.0",
    "url-loader": "^2.3.0"
  },
  "devDependencies": {
    "live-server": "^1.2.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
