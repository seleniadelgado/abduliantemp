{ 
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
	"./src/js",
    "./src/css",
	"./views"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js, ejs, 'scss",
  "delay": "50"
}
