{
  "name": "src",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "concurrently -k \"npm run deploy && npm run watch\" \"npm run watch:css\"",
    "start": "node index.js",
    "watch": "nodemon",
    "build": "webpack",
    "clean": "rm -rf ./dist && mkdir dist",
    "copy:assets": "cp -R src/assets dist/assets",
    "build:css": "node-sass --omit-source-map-url src/sass/main.scss  dist/css/styles.css",
    "watch:css": "npm run build:css -- --watch",
    "build:js": "babel ./src/js --out-file dist/main.min.js --presets=babel-preset-minify",
    "build:js:dev": "npm run build:js -- --source-maps",
    "deploy": "npm run clean && npm run build:css && npm run copy:assets && npm run build:js && npm run build",
    "heroku-postbuild": "yarn deploy"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-minify": "^0.5.1",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^4.3.1",
    "concurrently": "^5.0.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "jquery": "^3.4.1",
    "node-static": "^0.7.11",
    "npm-watch": "^0.6.0",
    "path": "^0.12.7",
    "popper.js": "^1.16.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
